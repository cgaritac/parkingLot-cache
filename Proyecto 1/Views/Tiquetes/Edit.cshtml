@model Proyecto_1.Models.Tiquete

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">CERRAR TIQUETE N° @Html.DisplayFor(model => model.Id)</h1>

<h2>Datos del Tiquete</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <strong>
                    @Html.DisplayNameFor(model => model.Id):
                </strong>
                @Html.DisplayFor(model => model.Id)
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Ingreso" class="control-label"></label>
                </strong>
                <input asp-for="Ingreso" class="form-control" type="datetime-local" readonly/>
                <span asp-validation-for="Ingreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Salida" class="control-label"></label>
                </strong>
                <input asp-for="Salida" class="form-control" />
                <span asp-validation-for="Salida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Placa" class="control-label"></label>
                </strong>
                <input asp-for="Placa" class="form-control" readonly />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Venta" class="control-label"></label>
                </strong>
                <input asp-for="Venta" class="form-control" readonly />
                <span asp-validation-for="Venta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Estado" class="control-label"></label>
                </strong>
                <input asp-for="Estado" class="form-control" readonly />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Cerrar tiquete" class="btn btn-primary" /> |
                <a asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
